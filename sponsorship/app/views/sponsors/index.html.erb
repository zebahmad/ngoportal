<p id="notice"><%= notice %></p>

<h1>Sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Referred by</th>
      <th>Preferred communication</th>
      <th>Comments</th>
      <th>Created on</th>
      <th>Last updated on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.name %></td>
        <td><%= sponsor.email %></td>
        <td><%= sponsor.phone %></td>
        <td><%= sponsor.referred_by %></td>
        <td><%= sponsor.preferred_communication %></td>
        <td><%= sponsor.comments %></td>
        <td><%= sponsor.created_on %></td>
        <td><%= sponsor.last_updated_on %></td>
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

